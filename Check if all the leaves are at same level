class Solution:
    def check(self, root):
        def height(node, hgt, cnt):
            if not node:
                return
            if not node.left and not node.right:
                hgt.append(cnt)
                cnt = 0
            height(node.left, hgt, cnt+1)
            height(node.right, hgt, cnt+1)
        hgt = []
        height(root, hgt, 1)
        if len(list(set(hgt))) > 1:
            return False
        else:
            return True
